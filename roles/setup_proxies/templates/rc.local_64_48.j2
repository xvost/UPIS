#!/bin/bash
ulimit -n 600000
ulimit -u 600000

/sbin/ip -6 addr add {{ nipv6 }}::2/{{ net_type }} dev eth0
/sbin/ip -6 route add default via {{ nipv6 }}::1
/sbin/ip -6 route add local {{ nipv6 }}::/{{ net_type }} dev lo

{% if not npd %}
{{ PROXY_DIR }}/ipadd.sh
{% else %}
{{ NDPPD_DIR }}/ndppd -d -c {{ NDPPD_DIR }}/ndppd.conf
{% endif %}
exit 0